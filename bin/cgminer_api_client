#!/usr/bin/env ruby

$LOAD_PATH.unshift("#{File.dirname(__FILE__)}/../lib/")

require 'cgminer_api_client'
require 'pp'

command = ARGV.last && ARGV.last.to_sym

unless command
  puts "USAGE: cgminer_api_client [options] command"
  exit(0)
end

pp(CgminerApiClient::MinerPool.new.send(:query, command))